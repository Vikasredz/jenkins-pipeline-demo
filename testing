pipeline {
    agent any
    environment {
        remoteUser = 'Vikasreddy'               // your SSH user
        remoteHost = 'your.server.ip'           // your remote server IP or hostname
        remotePath = '/path/to/deploy/app'      // deployment directory on remote server
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Build') {
            steps {
                echo 'Building project...'
                bat 'npm install'
                bat 'npm run build'
            }
        }
        stage('Test') {
            steps {
                echo 'Running tests...'
                bat 'npm test'
            }
        }
        stage('Security') {
            steps {
                echo 'Running npm audit...'
                bat 'npm audit || exit 0'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying to remote server...'
                bat """
                    scp -r * %remoteUser%@%remoteHost%:%remotePath%
                    ssh %remoteUser%@%remoteHost% "cd %remotePath% && npm install && pm2 restart app || pm2 start app.js --name app"
                """
            }
        }
    }
}
