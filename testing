pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Build') {
            steps {
                echo 'Building project...'
                bat 'npm install'
                bat 'npm run build'
            }
        }
        stage('Test') {
            steps {
                echo 'Running tests...'
                bat 'npm test'
            }
        }
        stage('Security') {
            steps {
                echo 'Running npm audit...'
                bat 'npm audit || exit 0'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying to remote server...'
                // Replace these variables with your server details
                script {
                    def remoteUser = 'your-ssh-user'
                    def remoteHost = 'your.server.ip'
                    def remotePath = '/path/to/deploy/app'
                }
                // Copy all files from workspace to remote server (you need scp installed)
                bat """
                scp -r * ${remoteUser}@${remoteHost}:${remotePath}
                ssh ${remoteUser}@${remoteHost} "cd ${remotePath} && npm install && pm2 restart app || pm2 start app.js --name app"
                """
            }
        }
    }
}
