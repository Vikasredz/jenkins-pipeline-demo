pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Installing dependencies...'
                bat 'npm install'
            }
        }

        stage('Tests') {
            steps {
                echo 'Running Unit & Integration Tests...'
                bat 'npm test'
            }
        }

        stage('Code Analysis') {
            steps {
                echo 'Running SonarQube Analysis...'
                bat 'sonar-scanner -Dsonar.projectKey=my-node-project'
            }
        }

        stage('Security Scan') {
            steps {
                echo 'Running OWASP Dependency-Check...'
                bat 'dependency-check --scan . --format HTML'
            }
        }

        stage('Deploy to Staging') {
            steps {
                echo 'Deploying to AWS EC2 Staging...'
                bat 'scp dist\\app.js user@staging-server:/deploy/'
            }
        }

        stage('Staging Tests') {
            steps {
                echo 'Running Postman API Tests on Staging...'
                bat 'newman run tests\\api-tests.json'
            }
        }

        stage('Deploy to Production') {
            steps {
                echo 'Deploying to AWS EC2 Production...'
                bat 'scp dist\\app.js user@prod-server:/deploy/'
            }
        }
    }
}
