pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building project...'
                // If you don't have npm, remove or update these lines accordingly
                bat 'npm install'
                bat 'npm run build'
            }
        }

        stage('Test') {
            steps {
                echo 'Running tests...'
                bat 'npm test'
            }
        }

        stage('Security') {
            steps {
                echo 'Running npm audit...'
                bat 'npm audit || exit 0'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying to staging environment...'
                bat 'docker-compose -f docker-compose.staging.yml up -d'
            }
        }

        stage('Release') {
            steps {
                echo 'Promoting to production...'
                bat 'docker-compose -f docker-compose.prod.yml up -d'
            }
        }

        stage('Monitoring') {
            steps {
                echo 'Simulating monitoring...'
                bat 'curl -f http://localhost:3000/health || exit 0'
            }
        }
    }
}
