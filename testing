pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building the application...'
                bat 'mvn clean package'  // For Java (Maven)
                // bat 'npm install'     // For Node.js
            }
        }

        stage('Tests') {
            steps {
                echo 'Running Unit & Integration Tests...'
                bat 'mvn test'           // For Java (JUnit)
                // bat 'npm test'        // For Node.js (Jest)
            }
        }

        stage('Code Analysis') {
            steps {
                echo 'Running SonarQube Analysis...'
                bat 'mvn sonar:sonar -Dsonar.projectKey=my-project'
            }
        }

        stage('Security Scan') {
            steps {
                echo 'Running OWASP Dependency-Check...'
                bat 'dependency-check --scan . --format HTML'
            }
        }

        stage('Deploy to Staging') {
            steps {
                echo 'Deploying to AWS EC2 Staging...'
                bat 'scp target\\my-app.jar user@staging-server:/deploy/'  // Use double backslashes or forward slashes carefully
            }
        }

        stage('Staging Tests') {
            steps {
                echo 'Running Postman API Tests on Staging...'
                bat 'newman run tests\\api-tests.json'
            }
        }

        stage('Deploy to Production') {
            steps {
                echo 'Deploying to AWS EC2 Production...'
                bat 'scp target\\my-app.jar user@prod-server:/deploy/'
            }
        }
    }
}
