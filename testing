pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Build skipped - no package.json'
                // Or put your build commands here if needed
            }
        }

        stage('Test') {
            steps {
                echo 'Tests skipped - no npm test scripts'
            }
        }

        stage('Security') {
            steps {
                echo 'Security scan skipped - no npm environment'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying to staging environment...'
                bat 'docker-compose -f docker-compose.staging.yml up -d'
            }
        }

        stage('Release') {
            steps {
                echo 'Promoting to production...'
                bat 'docker-compose -f docker-compose.prod.yml up -d'
            }
        }

        stage('Monitoring') {
            steps {
                echo 'Simulating monitoring...'
                bat 'curl -f http://localhost:3000/health || exit 0'
            }
        }
    }
}
